#!/usr/bin/env sh

# Personal environment tweaks
export MANPAGER="nvim +Man!"
export STARSHIP_CONFIG="$XDG_CONFIG_HOME/starship/starship.toml"
export ATAC_MAIN_DIR="$XDG_DATA_HOME/share/atac"
export LS_COLORS=$(dircolors -b | sed "s/^LS_COLORS='//;s/'$//")
export FULLNAME="$(getent passwd $USER | cut -d ':' -f 5 | cut -d ',' -f 1)"
export DATE="$(date "+%a, %b %e %I:%M %P")"

# FZF configuration
export FZF_DEFAULT_OPTS=" \
--color=bg+:#313244,bg:#1E1E2E,spinner:#F5E0DC,hl:#F38BA8 \
--color=fg:#CDD6F4,header:#F38BA8,info:#CBA6F7,pointer:#F5E0DC \
--color=marker:#B4BEFE,fg+:#CDD6F4,prompt:#CBA6F7,hl+:#F38BA8 \
--color=selected-bg:#45475A \
--color=border:#313244,label:#CDD6F4 \
--exact --border --cycle"

# 'Catppuccin Mocha' theme (bat)
export BAT_THEME="catppuccin-mocha"

# Colored less + termcap vars
export LESS="R --use-color -Dd+r -Du+b"
export LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
export LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
export LESS_TERMCAP_me="$(printf '%b' '[0m')"
export LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
export LESS_TERMCAP_se="$(printf '%b' '[0m')"
export LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
export LESS_TERMCAP_ue="$(printf '%b' '[0m')"
