#!/bin/bash

function random_hex() {
  random_hex="0xff$(openssl rand -hex 3)"
  echo "$random_hex"
}

colors="$(random_hex) $(random_hex) $(random_hex)"
echo "col.active_border = $colors 270deg"

hyprctl keyword general:col.active_border "$colors" 270deg

