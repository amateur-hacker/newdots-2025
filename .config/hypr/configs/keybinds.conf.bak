bind = $superMod CTRL, 7, movetoworkspace, 7
bind = $superMod CTRL, 8, movetoworkspace, 8
bind = $superMod CTRL, 9, movetoworkspace, 9
bind = $superMod CTRL, 0, movetoworkspace, 10


bind = $superMod, period, workspace, e+1
bind = $superMod, comma, workspace, e-1

bindm = $superMod, mouse:272, movewindow
bindm = $superMod, mouse:273, resizewindow

