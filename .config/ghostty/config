# Theme Configuration
theme = catppuccin-mocha.conf
# custom-shader = shaders/bloom025.glsl

# Font Configuration
font-family = Maple Mono
font-style = Regular
font-style-bold = Bold
font-style-italic = Italic
font-style-bold-italic = Bold Italic
font-family = JetBrains Mono Nerd Font
font-family = Symbols Nerd Font Mono
font-family = Noto Color Emoji
window-title-font-family = Maple Mono
font-size = 16

# Cursor and Appearance
cursor-style = underline

# Shell Integration
shell-integration = fish
shell-integration-features = no-cursor,sudo,no-title

# Mouse Behavior
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# Window and UI Behavior
window-save-state = always
window-decoration = false
window-padding-balance = true
window-padding-x = 5
window-padding-y = 5
window-inherit-working-directory = true
window-inherit-font-size = false
confirm-close-surface = false

# GTK/Tab Specific Options
gtk-tabs-location = bottom
gtk-wide-tabs = false

# Miscellaneous
resize-overlay = never

# Keybindings
keybind = clear

## Tab Navigation
keybind = ctrl+shift+j=new_tab
keybind = ctrl+shift+k=close_surface
keybind = ctrl+shift+l=next_tab
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+.=move_tab:1
keybind = ctrl+shift+,=move_tab:-1

## Tab Goto
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=last_tab

## Clipboard & Select all
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+a=select_all

## Windows & Reload Config
keybind = ctrl+enter=new_window
keybind = ctrl+shift+r=reload_config

## Font Size Control
keybind = ctrl+0=reset_font_size
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1

## Scrolling
keybind = ctrl+shift+up=scroll_page_up
keybind = ctrl+shift+down=scroll_page_down

## Splits & Layouts
keybind = alt+ctrl+shift+backslash=new_split:right
keybind = alt+ctrl+shift+minus=new_split:down
keybind = alt+ctrl+shift+c=close_window
keybind = alt+ctrl+j=goto_split:next
keybind = alt+ctrl+k=goto_split:previous
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+l=resize_split:right,10
keybind = alt+ctrl+shift+e=equalize_splits
