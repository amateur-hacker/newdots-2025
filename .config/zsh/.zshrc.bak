# Custom functions
touch() {
  local file
  for file in "$@"; do
    if [[ -e "$file" ]]; then
      echo "touch: updated timestamp '$file'"
    else
      echo "touch: created file '$file'"
    fi
    command touch "$file"
  done
}

# Load shell globals
load_shell_globals() {
  local file="$XDG_CONFIG_HOME/shell/load-shell-globals"
  [[ -f "$file" ]] && source "$file"
}
load_shell_globals

# Exit early if not running interactively
[[ $- != *i* ]] && return

# Zinit plugin manager setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

if [ ! -d "$ZINIT_HOME" ]; then
  mkdir -p "$(dirname "$ZINIT_HOME")"
  git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

source "${ZINIT_HOME}/zinit.zsh"

# Load Zinit plugins
zinit ice depth=1
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light Aloxaf/fzf-tab
zinit light jeffreytse/zsh-vi-mode

# zsh-vi-mode configuration
ZVM_VI_HIGHLIGHT_BACKGROUND=#45475A
ZVM_VI_HIGHLIGHT_FOREGROUND=#BAC2DE
ZVM_VI_INSERT_ESCAPE_BINDKEY=jk

# Completion setup
autoload -Uz compinit && compinit
zinit cdreplay -q

# Paste highlighting
zle_highlight+=(paste:none)

# History configuration
HISTSIZE=20000
SAVEHIST=$HISTSIZE
HISTFILE=$XDG_DATA_HOME/zsh/zsh_history
HISTDUP=erase

setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

# allow comments in shell
setopt interactive_comments

# Completion and fzf-tab styling
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'ls --color $realpath'
zstyle ':fzf-tab:complete:__zoxide_z:*' fzf-preview 'ls --color $realpath'

# Keybindings
zvm_after_init() {
  bindkey '^[[A' history-search-backward
  bindkey '^[[B' history-search-forward
  bindkey '^R' fzf-history-widget
  bindkey -M viins '^K' history-search-backward
  bindkey -M viins '^J' history-search-forward
}

# System info on launch
fastfetch

# Shell integrations
eval "$(starship init zsh)"
eval "$(zoxide init --cmd cd zsh)"
FZF_ALT_C_COMMAND= FZF_CTRL_T_COMMAND= eval "$(fzf --zsh)"
